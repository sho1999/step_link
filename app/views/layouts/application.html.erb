<!DOCTYPE html>
<html>
  <head>
    <title>StepLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">PicTweet</a></h1>
        <% if student_user_signed_in? %>
          <div class="user_nav grid-6">
            <%# <span><%= current_student_user.student.name %> %>
              <ul class="user__info">
                <li>
                  <%# <% if StudentUser.id == current_student_user.id %> %>
                  <%= link_to "マイページ", "/student_users/#{current_student_user.id}" %>
                  <%# <% end %> %>
                  <%= link_to "ログアウト", destroy_student_user_session_path, method: :delete %>
                </li>
              </ul>
            </span>
            <% if student_user_signed_in? && current_student_user.id == Student.student_user_id %>
              <%= link_to "編集する", edit_student_user_registration_path, class: "post" %>
            <% end %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_student_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_student_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
