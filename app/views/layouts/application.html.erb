<!DOCTYPE html>
<html>
  <head>
    <title>StepLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">StepLink</a></h1>
        <% if student_user_signed_in? || corp_user_signed_in? %>
          <div class="user_nav grid-6">
          <% if student_user_signed_in? %>
            <% unless current_student_user.student.nil? %>
              <%= link_to "マイページ", "/student_users/#{current_student_user.id}", class: "post" %>
            <% else %>
                <%= link_to "学生登録", new_student_path, class: "post" %>
            <% end %>
              <%= link_to "ログアウト", destroy_student_user_session_path, class: "post", method: :delete %>
          <% else %>
              <%= link_to "マイページ", "/corp_users/#{current_corp_user.id}", class: "post" %>
              <%= link_to "ログアウト", destroy_corp_user_session_path, class: "post", method: :delete %>
          <% end %>
          </div>
        <% else %>
          <div class="user_nav grid-6 display-flex">
            <span> 学生の方 
              <ul class="user__info">
                <li>
                  <%= link_to "ログイン", new_student_user_session_path, class: "post" %>
                  <%= link_to "新規登録", new_student_user_registration_path, class: "post" %>
                </li>
              </ul>
            </span>
            <span>企業の方
            <ul class="user__info">
              <li>
                <%= link_to "ログイン", new_corp_user_session_path, class: "post" %>
                <%= link_to "新規登録", new_corp_user_registration_path, class: "post" %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
